{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "rootDir": "./src",
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules"
  ]
}
